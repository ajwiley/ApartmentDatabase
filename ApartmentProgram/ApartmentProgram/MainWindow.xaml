<Window x:Class="ApartmentProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApartmentProgram"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Button_Click" Height="44" Width="91"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,59,0,0" TextWrapping="Wrap" Text="{Binding Data, Mode=TwoWay}" VerticalAlignment="Top" Height="365" Width="780"/>
        <TextBox HorizontalAlignment="Left" Margin="231,14,0,0" TextWrapping="Wrap" Text="{Binding Command, Mode=TwoWay}" VerticalAlignment="Top" Width="559" Height="40"/>
        <ComboBox HorizontalAlignment="Left" Margin="106,12,0,0" ItemsSource="{Binding ApartmentRows}" VerticalAlignment="Top" Width="120" Height="42" SelectedIndex="{Binding ApartmentRowSelected}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
